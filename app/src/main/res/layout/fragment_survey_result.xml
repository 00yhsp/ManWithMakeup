<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EBE6E4"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">
    <TextView
        android:id="@+id/greeting_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="25sp"
        android:paddingHorizontal="30dp"
        android:text="Survey Result Fragment"/>
    <Button
        android:id="@+id/move_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="3dp"
        android:background="@drawable/button_round_corners_brown"
        android:text="@string/survey_to_main"/>
</LinearLayout>