<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/app_primary_variant"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_30dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginVertical="30dp"
        android:paddingVertical="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/survey_result_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aasdf"
            android:textSize="35sp"/>
        <TextView
            android:id="@+id/survey_result_skin_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aasdf"
            android:textSize="35sp"
            android:layout_below="@id/survey_result_message"/>

    </RelativeLayout>

    <Button
        android:id="@+id/move_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="35dp"
        android:layout_gravity="bottom"
        android:background="@drawable/round_corners_brown"
        android:text="@string/survey_to_main"
        android:textColor="@color/white"/>
</FrameLayout>