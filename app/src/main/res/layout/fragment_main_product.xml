<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_variant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_corners">
            <ImageView
                android:id="@+id/product_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:background="@drawable/round_corners"/>
        </LinearLayout>
        <TextView
            android:id="@+id/product_item_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center|start">
            <RatingBar
                android:id="@+id/review_average_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Material.RatingBar.Indicator"
                android:progressTint="#F67568"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:numStars="5"
                android:stepSize="0.1"/>
            <TextView
                android:id="@+id/review_average_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center|start">
            <RatingBar
                android:id="@+id/review_submit_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
                android:isIndicator="false"
                android:progressTint="#F67568"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"/>
            <EditText
                android:id="@+id/review_edit_text"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/round_corners_grey"
                android:layout_below="@id/review_submit_rating_bar"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textSize="11sp"
                android:gravity="start"
                android:maxLines="5"
                android:maxLength="156"
                android:hint="@string/request_review"/>
            <Button
                android:id="@+id/review_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/review_edit_text"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:text="@string/submit_review"
                android:background="@drawable/round_corners_brown"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_review_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_item_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"/>
    </LinearLayout>

</ScrollView>