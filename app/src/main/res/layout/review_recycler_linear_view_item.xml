<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:clickable="true"
    android:orientation="vertical"
    android:gravity="center|start">
    <TextView
        android:id="@+id/review_reviewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:padding="5dp"
        android:text="김숭실님"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/review_star_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star_grey"/>
        <ImageView
            android:id="@+id/review_star_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star_grey"/>
        <ImageView
            android:id="@+id/review_star_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star_grey"/>
        <ImageView
            android:id="@+id/review_star_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star_grey"/>
        <ImageView
            android:id="@+id/review_star_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star_grey"/>
    </LinearLayout>
    <TextView
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_grey"
        android:layout_below="@id/review_reviewer_name"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="asdf\nasdf\nasdf\nasdf"
        android:textSize="11sp"/>
</RelativeLayout>